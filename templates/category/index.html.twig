{% extends 'base.admin.html.twig' %}

{% block title %}Gestion des catégories
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper mt-3">
		<h1>Voici la liste des catégories :</h1>


		<table class="table mt-5">
			<thead>
				<tr>
					<th scope="col">Nom de la catégorie</th>
					<th scope="col"></th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<th scope="row">{{category.name}}</th>
						<td>
							<a href="{{ path("categories_edit", {'id': category.id}) }}" type="button" class="btn btn-outline-success">Editer</button>
						</td>
						<td>
							<a href="{{ path("categories_delete", {'id': category.id}) }}" type="button" class="btn btn-outline-danger">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
	<div class="d-flex justify-content-center">
		<a href="{{ path("categories_create") }}" type="button" class="btn btn-info">Créer une catégorie</a>
	</div>
{% endblock %}
