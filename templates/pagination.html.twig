{% if pagination.pagesNb > 0 %}
	<nav aria-label="Pagination">
		<ul class="pagination">
			{% if pagination.page > 1 %}
				<li class="page-item">
					<a class="page-link" aria-label="1ère page" href="{{ path(pagination.routeName, pagination.routeParams|merge({'page': 1})) }}">
						<span aria-hidden="true">&laquo;</span>
					</a>
				</li>
				<li class="page-item">
					<a class="page-link" aria-label="Précédent" href="{{ path(pagination.routeName, pagination.routeParams|merge({'page': pagination.page-1})) }}">
						<span aria-hidden="true">&lt;</span>
					</a>
				</li>
			{% endif %}

			{# Affichage de toutes les pages entre p-4 et p+4 sauf si < 1 ou > pagesNb #}
			{% for p in range(max(pagination.page-4, 1), min(pagination.page+4, pagination.pagesNb)) %}
				<li class="page-item" {% if p == pagination.page %} class="active" {% endif %}>
					<a class="page-link" href="{{ path(pagination.routeName, pagination.routeParams|merge({'page': p})) }}">
						<span aria-hidden="true">{{ p }}</span>
					</a>
				</li>
			{% endfor %}

			{% if pagination.page < pagination.pagesNb %}
				<li class="page-item">
					<a class="page-link" aria-label="Suivant" href="{{ path(pagination.routeName, pagination.routeParams|merge({'page': pagination.page+1})) }}">
						<span aria-hidden="true">&gt;</span>
					</a>
				</li>
				<li class="page-item">
					<a class="page-link" aria-label="Dernière page" href="{{ path(pagination.routeName, pagination.routeParams|merge({'page': pagination.pagesNb})) }}">
						<span aria-hidden="true">&raquo;</span>
					</a>
				</li>
			{% endif %}
		</ul>
	</nav>
{% endif %}
