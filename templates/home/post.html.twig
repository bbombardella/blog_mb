<style>
	.example-wrapper {
		margin: 1em auto;
		max-width: 800px;
		width: 95%;
		font: 18px / 1.5 sans-serif;
	}
	.example-wrapper code {
		background: #F5F5F5;
		padding: 2px 6px;
	}
</style>

<div class="example-wrapper mt-3">
	<h1>Les cinqs derniers posts</h1>


	<table class="table mt-5">
		<thead>
			<tr>
				<th scope="col">Titre</th>
				<th scope="col">Description</th>
				<th scope="col">Créé le</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			{% for post in posts %}
				<tr>
					<th scope="row">{{post.title}}</td>
					<td>{{post.description}}</td>
					<td>{{post.createdAt|date("m/d/Y")}}</td>
					<td>
						<a href="{{ path('posts_show',{'slug': post.slug}) }}" role="button" class="btn btn-outline-success">Voir le post</a>
					</td>
				</tr>
			{% else %}
				<p>Désolé, il n'y a aucun post de disponibles.</p>
			{% endfor %}
		</tbody>
	</table>

</div>
