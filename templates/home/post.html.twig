<div class="container mt-3">
	<div class="row">
		<div class="col-12">
			<h1>Les cinqs derniers posts</h1>
		</div>
	</div>


	<div class="row">
		<div class="col-12">
			<table class="table mt-3">
				<thead>
					<tr>
						<th scope="col">Titre</th>
						<th scope="col">Description</th>
						<th scope="col"></th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					{% for post in posts %}
						<tr>
							<td>{{post.title}}</td>
							<td>{{post.description}}</td>
							<td>
								<a href="{{ path('posts_show',{'slug': post.slug}) }}" role="button" class="btn btn-outline-success">Voir le post</a>
							</td>
						</tr>
					{% else %}
						<p>Désolé, il n'y a aucun post de disponibles.</p>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

</div>
