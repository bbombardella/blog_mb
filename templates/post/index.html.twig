<div class="container">
	<div class="row">
		<div class="col-12">
			<h1>Voici la liste des posts créés :</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Titre</th>
						<th scope="col">Description</th>
						<th scope="col"></th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					{% for post in posts %}
						<tr>
							<th scope="row">{{post.id}}</th>
							<td>{{post.title}}</td>
							<td>{{post.description}}</td>
							<td>
								<button type="button" class="btn btn-outline-success">Éditer</button>
							</td>
							<td>
								<button type="button" class="btn btn-outline-danger">Supprimer</button>
							</td>
						</tr>
					{% else %}
						<p>Désolé, il n'y a aucun post de disponibles.</p>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
