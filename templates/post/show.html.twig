{% extends 'base.html.twig' %}

{% block title %}Posts
{% endblock %}

{% block body %}
	<!--Bref donc ça c'est l'affichage que j'avais commencé à faire pour les posts ^^ donc je le garde quelque part -->
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="example-wrapper mt-3">
		<div class="shadow p-3 mb-5 bg-body rounded mt-4">
			<div>
				<h3>{{posts.title}}</h3>
				<p class="text-black-50 ml-2 mr-2">
					{{posts.description}}
				</p>
				<p class="text-justify ml-3 mr-3">
					{{posts.content}}
				</p>
				<div class="d-flex justify-content-around">
					<p class="text-black-50">
						Créé le : {{posts.createdAt|date("m/d/Y")}}
					</p>
					<p class="text-black-50">
						Modifié le : {{posts.updatedAt|date("m/d/Y")}}
					</p>
				</div>
				<div>
					<span class="badge bg-secondary text-white">Catégories</span>
				</div>
				<div class="mt-3 border-top">
					<p class="mt-1">Commentaires</p>
					<div class="border-bottom">
						<p class="text-justify ml-4 mr-4">
							NOM USER : Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla consectetur finibus elit sit amet
						</p>
						<p class="text-black-50 ml-4 mr-4">
							Commentaire posté le : DATE
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
