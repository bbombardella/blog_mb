<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Accueil
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
						           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		<header>
			{#Création du header#}
			<nav class="navbar navbar-dark bg-dark">
				<ul id="navigation">
					<li>
						<a href="{{ path("home_user") }}">Nom du blog</a>
					</li>
					<li>
						<a href="">Gérer les posts</a>
					</li>
					<li>
						<a href="">Gérer les catégories</a>
					</li>
					<li>
						<a href="{{ path("comments") }}">Gérer les commentaires</a>
					</li>
				</ul>
			</nav>
		</header>
		<main>
			{% block body %}{% endblock %}
		</main>
	</body>
</html>
